<h2 style="color: #B00100; margin: 0 auto">Show item</h2> <br />

<h4><%= @item.name %></h4>

<ul>
		<li>Price: <%= @item.price %> $</li>
		<li>Weight: <%= @item.weight %></li>
		<li>Description: <%= @item.description %></li>
</ul>

<br />

<%= link_to "Edit #{@item.name}", edit_item_path %> <br />
<%= button_to "Delete #{@item.name}", item_path(@item), method: :delete %><br />
<%= link_to "All items", items_path %>