<h2 style="color: #B00100; margin: 0 auto">Edit item <%= @item.name %></h2>

<%= form_tag item_path(@item), method: :put do %>
  <%= label_tag :name %>
  <%= text_field_tag :name %>
  <%= label_tag :price %>
  <%= text_field_tag :price %>
  <%= label_tag :description %>
  <%= text_field_tag :description %>
  <%= submit_tag "Save", class: "btn btn-large btn-primary" %>
  <% end %>