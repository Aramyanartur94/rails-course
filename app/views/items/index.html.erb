<h2 style="color: #B00100; margin: 0 auto">All items</h2> <br />

<% unless @items.empty? %>
	<table>
		<tr>
			<th>Id</th>	
			<th>Name</th>
			<th>Price</th>
			<th>Description</th>
			<th>Rating</th>
			<th>Delete</th>
			<th></th>
		</tr>
	<% @items.each do |item| %>
		<tr>
			<td><%= item.id %></td>
			<td><%= link_to item.name, item_path(item) %></td>
			<td><%= item.price %></td>
			<td><%= "img" if item.description %></td>
			<td><%= item.votes_count %>, <%= link_to '+', upvote_item_path(item) %></td>
			<td><%= button_to 'delete', item_path(item), method: :delete %></td>
		</tr>
	<% end %> 
</table>
<br />

<%= button_to 'New item', new_item_path, method: :get %><br />
<%= button_to 'Only expensive', expensive_items_path, method: :get %><br />
<%= button_to 'All items', items_path, method: :get %>
<% else %>
	<h3 style="color: #B00100; margin: 0 auto">No items</h3> <br />
	<%= button_to 'New item', new_item_path, method: :get %><br />
<% end %>
<%= render partial: 'shared/email'  %>



