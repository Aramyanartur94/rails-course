<h2 style="color: #B00100; margin: 0 auto">Create new item</h2>

<%= form_for :item, url: items_path do |f| %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>

   <p>
    <%= f.label :price %><br />
    <%= f.text_area :price %>
  </p>

  <p>
    <%= f.submit %>
  </p>
  <% end %>